<% if signed_in? %>
    <div class="row">
      <aside class="col-xs12 col-sm-8">
        <h3>参加予定のイベント</h3>
        <div class="list-group">
          <% @attend_events.each do |event| %>
              <%= link_to event, {class: 'list-group-item', style:'margin-bottom:20px;'} do %>
                  <h4 class="list-group-item-heading">
                    <%= event.title %>
                  </h4>
                  <div class="row">
                    <div class="col-md-6">
                      <% if event.is_over_several_days? %>
                          <p class="list-group-item-text">
                            日時：<%= event.datetime %>
                          </p>
                      <% else %>
                          <p class="list-group-item-text">
                            日時：<%= event.date %>
                          </p>
                          <p class="list-group-item-text">
                            時刻：<%= event.time %>
                          </p>
                      <% end %>
                      <p class="list-group-item-text">
                        場所：<%= event.location %>
                      </p>
                    </div>
                    <div class="col-md-6">
                      <% if event.wanted_persons %>
                          <p class="list-group-item-text">
                            募集：<%= event.wanted_persons %> 名︎
                          </p>
                          <p class="list-group-item-text">
                            残り：<%= event.remain %> 名︎
                          </p>
                      <% else %>
                          <p class="list-group-item-text">
                            参加：<%= event.attendance %> 名︎
                          </p>
                      <% end %>
                    </div>
                  </div>
              <% end %>
        <% end %>
        </div>
        <%= will_paginate @attend_events %>
      </aside>
      <div class="col-xs12 col-sm-4">
        <h3>右側</h3>
      </div>
    </div>
<% else %>
    <div class="center jumbotron">
      <h1>ホーム画面</h1>

      <h2>
        フットサルの予定です
      </h2>

      <%= link_to "新規登録", signup_path,
                  class: "btn btn-lg btn-primary" %>
    </div>

<% end %>